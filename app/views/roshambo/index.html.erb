<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>Rock, Paper Scissors!</title>
</head>
<body>

    <h1>じゃんけん</h1>

    <div id="roshambo-buttons">
        <button class="roshambo-btn" data-choice="グー">
            <%= image_tag "roshambo_rock.png", alt: "グー" %>
        </button>
        <button class="roshambo-btn" data-choice="チョキ">
            <%= image_tag "roshambo_scissors.png", alt: "チョキ" %>
        </button>
        <button class="roshambo-btn" data-choice="パー">
            <%= image_tag "roshambo_paper.png", alt: "パー" %>
        </button>
    </div>

    <div id="result" style="margin-top: 20px;"></div>
    <div id="streakDisplay"></div>
    <div id="maxStreakDisplay" style="margin-top: 20px;"></div>

</body>
</html>